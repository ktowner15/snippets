	//main function:
	"main()": {
		"prefix": "main",
		"body": [
			"#File: main.py",
			"",
			"if __name__ == \"__main__\":",
			"\tprint(\"${1:Hello world?}\")",
			"#end main"
		],
		"description": "The main() function"
	},
	"function()":{
		"prefix": "function",
		"body": [
			"def ${1:function_name}(${2:params}):",
			"\t${3}",
			"#end ${1:function_name}"
		],
		"description": "A function"
	}
}